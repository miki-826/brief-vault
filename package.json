{
  "name": "brief-vault",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:web": "npm --prefix web run dev",
    "dev:server": "npm --prefix server run dev",
    "dev:all": "concurrently -k -n server,web -c blue,green \"npm run dev:server\" \"npm run dev:web\"",
    "build": "npm --prefix web run build",
    "preview": "npm --prefix web run preview",
    "start": "npm --prefix server run start",
    "start:built": "npm run build && npm --prefix server run start"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
